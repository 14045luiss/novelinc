<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_put_del_pembeli"
    android:layout_width="match_parent"
    android:background="@drawable/bg1"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".LayarEditBuku">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/imgPhotoId"
            android:layout_width="129dp"
            android:layout_height="156dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="75dp"
            android:src="@drawable/default_buku" />
        <Button
            android:id="@+id/btPhotoUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgPhotoId"
            android:layout_centerHorizontal="true"
            android:background="#f2aaaa"
            android:text="Select Photo Id"/>
        <TextView
            android:id="@+id/tvIdBuku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btPhotoUrl"
            android:layout_marginTop="10dp"
            android:text="ID Buku :"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/edtIdBuku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvIdBuku"
            android:layout_toRightOf="@+id/tvIdBuku"
            android:hint="id_buku"
            android:enabled="false"/>
        <TextView
            android:id="@+id/tvJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvIdBuku"
            android:text="Judul :"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/edtJudulBuku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvJudul"
            android:layout_alignLeft="@+id/edtIdBuku"
            android:layout_toRightOf="@+id/tvJudul"
            android:hint="Judul"/>
        <TextView
            android:id="@+id/tvPenulis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvJudul"
            android:text="Penulis :"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/edtPenulisBuku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvPenulis"
            android:layout_alignLeft="@+id/edtIdBuku"
            android:layout_toRightOf="@+id/tvIdBuku"
            android:hint="Penulis"/>
        <TextView
            android:id="@+id/tvPenerbit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPenulis"
            android:text="Penerbit :"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/edtPenerbitBuku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvPenerbit"
            android:layout_alignLeft="@+id/edtIdBuku"
            android:layout_toRightOf="@+id/tvPenerbit"
            android:hint="Penerbit"
            android:inputType="text" />
        <EditText
            android:id="@+id/edtTahunTerbitBuku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvTahunTerbit"
            android:layout_alignLeft="@+id/edtIdBuku"
            android:layout_toRightOf="@+id/tvTahunTerbit"
            android:hint="Tahun Terbit"
            android:inputType="text" />
        <TextView
            android:id="@+id/tvTahunTerbit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvPenerbit"
            android:text="Tahun Terbit :"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/edtSinopsisBuku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvSinopsis"
            android:layout_alignLeft="@+id/edtIdBuku"
            android:layout_toRightOf="@+id/tvTahunTerbit"
            android:hint="Sinopsis"
            android:inputType="text" />
        <TextView
            android:id="@+id/tvSinopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvTahunTerbit"
            android:text="Sinopsis :"
            android:textSize="20dp"/>


        <!--<LinearLayout-->
        <!--android:id="@+id/LinearLayout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="347dp"-->
        <!--android:layout_below="@+id/tvTelpn"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginTop="31dp"-->
        <!--android:layout_marginEnd="0dp"-->
        <!--android:layout_marginRight="0dp"-->
        <!--android:orientation="horizontal">-->

        <ImageView
            android:id="@+id/btBack"
            android:layout_width="98dp"
            android:layout_height="73dp"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/btUpdate"
            android:layout_width="98dp"
            android:layout_height="73dp"
            android:layout_alignEnd="@+id/edtIdBuku"
            android:layout_alignParentTop="true"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="-66dp"
            android:src="@drawable/edit" />

        <ImageView
            android:id="@+id/btDelete"
            android:layout_width="98dp"
            android:layout_height="73dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:src="@drawable/delete" />
        <!--</LinearLayout>-->
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayout"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="210dp"
            android:layout_marginBottom="265dp"
            android:hint="Pesan"
            android:inputType="textMultiLine"
            android:textSize="20dp" />

    </RelativeLayout>
</ScrollView>