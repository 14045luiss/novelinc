<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layardetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context=".LayarDetail">

    <TextView
        android:id="@+id/tvIdReview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtIdReview"
        android:layout_alignParentStart="true"
        android:text="Id Review : "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvIdUser2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtIdUser"
        android:layout_alignParentStart="true"
        android:text="Id user : "
        android:textSize="20sp"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/tvIdBuku2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtIdbuku"
        android:layout_alignParentStart="true"
        android:text="Id buku : "
        android:textSize="20sp"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/tvIsireview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edtIsireview"
        android:layout_alignParentStart="true"
        android:text="Isi review : "
        android:textSize="20sp"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/tvTanggalreview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="185dp"
        android:text="Tanggal Review : "
        android:textSize="20sp"
        tools:ignore="UnknownId" />

    <EditText
        android:id="@+id/edtIdReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/edtIdbuku"
        android:hint="id review"
        tools:ignore="UnknownId" />

    <EditText
        android:id="@+id/edtIdUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/edtIdReview"
        android:layout_marginEnd="122dp"
        android:hint="id user"
        tools:ignore="UnknownId" />

    <EditText
        android:id="@+id/edtIdbuku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtIdUser"
        android:layout_below="@+id/tvIdUser2"
        android:layout_marginTop="13dp"
        android:hint="id buku"
        android:inputType="date"
        tools:ignore="UnknownId" />

    <EditText
        android:id="@+id/edtIsireview"
        android:layout_width="175dp"
        android:layout_height="103dp"
        android:layout_alignStart="@+id/edtIdReview"
        android:layout_below="@+id/edtIdbuku"
        android:hint="Isi review"
        android:inputType="number"
        tools:ignore="UnknownId" />

    <EditText
        android:id="@+id/edtTanggalreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvTanggalreview2"
        android:layout_alignStart="@+id/edtIdReview"
        android:hint="Tanggal review"
        tools:ignore="UnknownId" />

    <LinearLayout
        android:id="@+id/Linearlayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvMessage2"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        tools:ignore="UnknownId">

        <Button
            android:id="@+id/btInsert2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert" />

        <Button
            android:id="@+id/btUpdate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update" />

        <Button
            android:id="@+id/btDelete2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete" />

        <Button
            android:id="@+id/btBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvMessage2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
        android:inputType="textMultiLine"
        android:text="Pesan Muncul disini"
        android:textSize="20sp" />
</RelativeLayout>