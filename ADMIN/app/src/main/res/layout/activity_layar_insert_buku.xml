<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_put_del_pembeli"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".LayarInsertBuku">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="451dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/imgAddPhotoId"
            android:layout_width="200dp"
            android:layout_height="102dp"
            android:layout_below="@+id/LinearLayout"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="94dp"
            android:src="@drawable/default_buku" />


        <TextView
            android:id="@+id/tvAddJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edtAddJudul"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="7dp"
            android:text="  Judul :"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtAddJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgAddPhotoId"
            android:layout_alignStart="@+id/edtAddpenerbit"
            android:layout_marginStart="0dp"
            android:layout_marginTop="45dp"
            android:hint="judul" />

        <TextView
            android:id="@+id/tvAddpenulis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edtAddpenulis"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:text="Penulis :"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtAddpenulis"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddpenerbit"
            android:layout_centerHorizontal="true"
            android:hint="Penulis" />

        <EditText
            android:id="@+id/edtAddpenerbit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddJudul"
            android:layout_alignEnd="@+id/edtAddpenulis"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="13dp"
            android:hint="Penerbit" />

        <TextView
            android:id="@+id/tvAddpenerbit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgAddPhotoId"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="-131dp"
            android:text="Penerbit :"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/btAddPhotoId"
            android:layout_width="109dp"
            android:layout_height="57dp"
            android:layout_alignTop="@+id/btAddData"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="89dp"
            android:src="@drawable/galery" />


        <ImageView
            android:id="@+id/imgPreview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />

        <!-- Untuk mengambil Image/Gambar -->
        <ImageView
            android:id="@+id/btnCapture"
            android:layout_width="109dp"
            android:layout_height="59dp"
            android:layout_below="@+id/imgPreview"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/camera" />


        <TextView
            android:id="@+id/tvAddtahunterbit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edtAddtahunterbit"
            android:layout_alignParentStart="true"
            android:text="Tahun terbit :"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtAddtahunterbit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtAddpenulis"
            android:layout_alignStart="@+id/edtAddJudul"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="84dp"
            android:hint="tahun terbit" />

        <TextView
            android:id="@+id/tvAddsinopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/edtAddsinopsis"
            android:layout_alignParentStart="true"
            android:text="sinopsis :"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtAddsinopsis"
            android:layout_width="230dp"
            android:layout_height="87dp"
            android:layout_below="@+id/edtAddtahunterbit"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="16dp"
            android:hint="sinopsis" />

        <ImageView
            android:id="@+id/btAddBack"
            android:layout_width="101dp"
            android:layout_height="59dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/btAddData"
            android:layout_width="83dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="98dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/insert" />

        <TextView
            android:id="@+id/tvAddMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="420dp"
            android:hint="Pesan"
            android:inputType="textMultiLine"
            android:textSize="20dp" />
    </RelativeLayout>
</RelativeLayout>